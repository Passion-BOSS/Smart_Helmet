config DRIVER_SAMPLE_BUTTON

    bool "Support BUTTON Sample Driver."

    default n
    depends on ENABLE_DRIVER_SAMPLE
    help
        This option means support BUTTON Sample Driver.

if DRIVER_SAMPLE_BUTTON
menu "BUTTON Sample Driver Configuration"
    osource "application/samples/driver/button/Kconfig"
endmenu
endif

config DRIVER_SAMPLE_LED_PWM

    bool "Support LED PWM Sample Driver."
    default n
    depends on ENABLE_DRIVER_SAMPLE
    help
        This option means support LED PWM Sample Driver.

if DRIVER_SAMPLE_LED_PWM
menu "LED PWM Sample Driver Configuration"
    osource "application/samples/driver/led_pwm/Kconfig"
endmenu
endif

